{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ (clang++)",
      "type": "shell",
      "command": "mkdir -p \"${fileDirname}/bin\" && clang++ -std=c++17 -O2 \"${file}\" -o \"${fileDirname}/bin/run\" && \"${fileDirname}/bin/run\"",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "panel": "new",
        "reveal": "always",
        "clear": true
      }
    }
  ]
}